CREATE TABLE `smemanagement`.`user` (
  `iduser` INT NOT NULL AUTO_INCREMENT,
  `user_name` VARCHAR(45) NULL,
  `password` VARCHAR(45) NULL,
  `role` VARCHAR(45) NULL,
  PRIMARY KEY (`iduser`));

INSERT INTO `smemanagement`.`user` (`user_name`, `password`, `role`) VALUES ('Admin', 'A@1234', 'admin');

CREATE TABLE `smemanagement`.`district` (
  `idDistrict` INT NOT NULL AUTO_INCREMENT,
  `district` VARCHAR(45) NULL,
  PRIMARY KEY (`idDistrict`));

ALTER TABLE `smemanagement`.`district` 
CHANGE COLUMN `idDistrict` `id_division` INT NOT NULL AUTO_INCREMENT ,
CHANGE COLUMN `district` `division` VARCHAR(45) NULL DEFAULT NULL , RENAME TO  `smemanagement`.`division` ;

CREATE TABLE `smemanagement`.`customers` (
  `idcustomers` INT NOT NULL AUTO_INCREMENT,
  `name` VARCHAR(45) NULL,
  `cell` VARCHAR(45) NULL,
  `district` VARCHAR(45) NULL,
  `address` VARCHAR(45) NULL,
  `created_date` DATE NULL,
  PRIMARY KEY (`idcustomers`));

CREATE TABLE `smemanagement`.`products` (
  `idproducts` INT NOT NULL AUTO_INCREMENT,
  `name` VARCHAR(45) NULL,
  `quentity` INT NULL,
  `unit_price` FLOAT NULL,
  `purchase_price` FLOAT NULL,
  `entry_date` DATE NULL,
  PRIMARY KEY (`idproducts`));

CREATE TABLE `smemanagement`.`product_tag` (
  `idproduct_tag` INT NOT NULL AUTO_INCREMENT,
  `product_tag` VARCHAR(45) NULL,
  PRIMARY KEY (`idproduct_tag`));

CREATE TABLE `smemanagement`.`sales` (
  `idsales` INT NOT NULL,
  `product_name` VARCHAR(45) NULL,
  `purchase_quentity` INT NULL,
  `actual_price` FLOAT NULL,
  `discount` FLOAT NULL,
  PRIMARY KEY (`idsales`));

ALTER TABLE `smemanagement`.`sales` 
ADD COLUMN `sales_date` DATE NULL AFTER `discount`;

CREATE TABLE `smemanagement`.`purchases` (
  `idpurchases` INT NOT NULL AUTO_INCREMENT,
  `produnt_name` VARCHAR(45) NULL,
  `quentity` INT NULL,
  `unit_price` FLOAT NULL,
  `total_price` FLOAT NULL,
  `purchase_date` DATE NULL,
  PRIMARY KEY (`idpurchases`));